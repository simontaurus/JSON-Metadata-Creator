{
  "title": "General",
  "type": "object",
  "required": [
    "schema_version",
    "file_name",
    "full_path",
    "tags",
    "creation_date",
    "last_modified_date",
    "contributors"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "default": "v0.1.1",
      "options": {
        "hidden": true
      }
    },
    "form_url": {
      "type": "string",
      "format": "uri",
      "default": "https://horizon-2020-spartacus.github.io/JSON-Metadata-Creator/",
      "options": {
        "hidden": true
      }
    },
    "file_name": {
      "title": "File name",
      "type": "string",
      "default": "<file name>",
      "options": {
        "infoText": "Name of the file to be described by the JSON"
      }
    },
    "full_path": {
      "title": "Full path",
      "type": "string",
      "format": "uri",
      "default": "<uri>",
      "options": {
        "infoText": "Full path or uri of file location"
      }
    },
    "file_description": {
      "title": "File description",
      "type": "string",
      "format": "textarea",
      "options": {
        "infoText": "A description of the file"
      }
    },
    "tags": {
      "type": "array",
      "format": "table",
      "title": "Tags",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "title": "Tag"
      }
    },
    "creation_date": {
      "title": "Creation date",
      "type": "string",
      "format": "date",
      "options": {
        "flatpickr": {}
      }
    },
    "last_modified_date": {
      "title": "Date of last modification",
      "type": "string",
      "format": "date",
      "options": {
        "flatpickr": {}
      }
    },
    "contributors": {
      "title": "Contributors",
      "type": "array",
      "format": "table",
      "uniqueItems": true,
      "items": {
        "title": "Contributor",
        "$ref": "contributor.json"
      }
    },
    "data_policy": {
      "title": "Data policy",
      "type": "string",
      "enum": [
        "Internal",
        "Selected externals",
        "Public"
      ],
      "default": "Internal",
      "options": {
        "infoText": "Access restrictions of the file"
      }
    },
    "specifics": {
      "title": "Specifics",
      "type": "array",
      "format": "tabs",
      "items": {
      "title": "Specific",
      "headerTemplate": "{{i}} - {{self.file_type}}",
      "options": {
            "keep_oneof_values": false
      },
      "$ref": "specificsOneOf.json"
     }
    }
  }
}
