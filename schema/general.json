{
  "title": "General",
  "type": "object",
  "required": [
    "schema_version",
    "file_name",
    "full_path",
    "tags",
    "creation_date",
    "last_modified_date",
    "contributors"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "default": "v0.1.1",
      "options": {
        "hidden": true
      }
    },
    "file_name": {
      "type": "string",
      "description": "Name of the file itself",
      "default": "<file name>",
      "title": "File name",
      "options": {
        "infoText": "see <a href='https://onto-wiki.eu/wiki/GPO_ee8c37fd_9f2c_4047_b25d_4149894bd7c0'>OntoWiki</a>"
      }
    },
    "file_name_iri": {
      "type": "string",
      "format": "url",
      "default": "https://gitlab.cc-asp.fraunhofer.de/ISC-Public/ISC-Digital/ontology/GPO#GPO_ee8c37fd_9f2c_4047_b25d_4149894bd7c0",
      "options": {
        "hidden": true
      }
    },
    "full_path": {
      "type": "string",
      "format": "uri",
      "description": "Full path/uri of file location",
      "default": "<uri>"
    },
    "file_description": {
      "type": "string",
      "format": "textarea",
      "description": "Description of the file"
    },
    "tags": {
      "type": "array",
      "format": "table",
      "title": "Tags",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "title": "Tag"
      }
    },
    "creation_date": {
      "type": "string",
      "format": "date",
      "options": {
        "flatpickr": {}
      }
    },
    "last_modified_date": {
      "type": "string",
      "format": "date",
      "options": {
        "flatpickr": {}
      }
    },
    "contributors": {
      "type": "array",
      "format": "table",
      "title": "Contributors",
      "uniqueItems": true,
      "items": {
        "title": "Contributor",
        "$ref": "contributor.json"
      }
    },
    "data_policy": {
      "type": "string",
      "enum": [
        "Internal",
        "Selected Externals",
        "Public"
      ],
      "description": "Access restrictions of the file",
      "default": "Institution A"
    },
    "specifics": {
      "title": "Specifics",
      "$ref": "specifics.json"
    }
  }
}
